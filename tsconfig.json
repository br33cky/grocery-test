{
  "extends": "expo/tsconfig.base",
  "include": ["src"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2022"],
    "moduleResolution": "node",
    "noEmit": true,
    "target": "esnext",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "rootDirs": ["src"],
    "baseUrl": "./src",
    "strict": true,
    "module": "commonjs",
    "paths": {
      "*": ["./*"]
    }
  }
}
